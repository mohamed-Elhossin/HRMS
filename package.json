{
  "name": "basics",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "lint": "if [ \"$(find src -name '*.ts' | wc -l)\" -gt 0 ]; then eslint './src/**/*.ts' --fix; else echo 'No TS files to lint'; fi",
    "lint:watch": "eslint './src/**/*.ts' --watch --fix",
    "start": "concurrently \"npm run lint:watch\" \"ng serve --open\"",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "preview": "http-server ./dist/frontend -p 4201",
    "analyze": "ng build --configuration production --source-map && source-map-explorer dist/frontend/*.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@primeng/themes": "^19.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.5",
    "jwt-decode": "^4.0.0",
    "ngx-captcha": "^14.0.0",
    "primeng": "^17.18.15",
    "rxjs": "~7.8.0",
    "tailwindcss-rtl": "^0.9.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular-eslint/schematics": "^18.4.2",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.0",
    "@types/jquery": "^3.5.32",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "angular-eslint": "19.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.15.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
